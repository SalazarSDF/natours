{
  "name": "natours",
  "version": "1.0.0",
  "description": "Landing page for natours",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass sass/main.scss css/style.css -w",
    "server": "live-server --wait=1000",

    "compile": "node-sass sass/main.scss css/style.comp.css",
    "concat": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix": "postcss --use autoprefixer -o css/style.prefix.css css/style.concat.css",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",

    "build": "npm run compile && npm run concat && npm run prefix && npm run compress"
  },
  "browserslist": "last 5 versions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SalazarSDF/natours.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SalazarSDF/natours/issues"
  },
  "homepage": "https://github.com/SalazarSDF/natours#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concat": "^1.0.3",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0"
  }
}
